{
	"schemaVersion": 1,
	"id": "improved-beacons",
	"version": "${version}",
	"name": "Improved Beacons",
	"description": "Improves the functionality of beacons, adding more layers with additional effects, and ways to increase their range.",
	"authors": [
		"Me!"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/improved-beacons/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "tntmister.improvedbeacons.ImprovedBeacons",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "tntmister.improvedbeacons.ImprovedBeaconsClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"improved-beacons.mixins.json",
		{
			"config": "improved-beacons.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.1",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	}
}